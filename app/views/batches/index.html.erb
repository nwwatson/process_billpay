<p id="notice"><%= notice %></p>

<h1>Batches</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.description %></td>
        <td><%= batch.status %></td>
        <td><%= link_to 'Show', batch, class: 'btn btn-outline-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
