<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-5 py-5">
    <div class="col-lg-6 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3">Create your account.</h1>
      <p class="col-lg-10 fs-4">
        Create your account now to have access to the system.
      </p>
    </div>
    <div class="col-10 mx-auto col-lg-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: BootstrapBuilder, html: { class: 'p-5 border rounded-3 bg-light' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>
        <%= f.password_field :password,
                              autocomplete: "new-password",
                              instructions: (@minimum_password_length.present? ? "#{@minimum_password_length} characters minimum" : nil) %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

        <%= f.form_submit "Create your account" %>
        <hr class="my-4">
        <small class="text-muted"><%= render 'devise/shared/links' %></small>
      <% end %>
    </div>
  </div>
</div>

