<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-5 py-5">
    <div class="col-lg-6 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3">Change your password.</h1>
      <p class="col-lg-10 fs-4">
        Almost there. Lets get your password reset.
      </p>
    </div>
    <div class="col-10 mx-auto col-lg-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), builder: BootstrapBuilder, html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password,
                              autofocus: true,
                              wrapping_class: 'form-floating',
                              autocomplete: "new-password",
                              instructions: "(#{@minimum_password_length} characters minimum)" %>

        <%= f.password_field :password_confirmation,
                              autocomplete: "new-password",
                              wrapping_class: 'form-floating' %>
        <%= f.submit "Change my password" %>
        <hr class="my-4">
        <small class="text-muted"><%= render 'devise/shared/links' %></small>
      <% end %>
    </div>
  </div>
</div>

